{
  "name": "farm-manager-backend",
  "version": "1.0.0",
  "description": "Farm Manager Backend API - Express + TypeScript",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "pnpm build && NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules --disable-warning=ExperimentalWarning' jest --watchman=false --runInBand",
    "db:up": "docker compose --env-file .env up -d",
    "db:down": "docker compose --env-file .env down",
    "db:logs": "docker compose --env-file .env logs -f postgres",
    "db:migration:generate": "sequelize-cli migration:generate",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "farm",
    "management",
    "api",
    "express",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "json2csv": "^5.0.6",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.1",
    "pdfkit": "^0.13.0",
    "pg": "^8.11.1",
    "sequelize": "^6.32.1",
    "stream-buffers": "^3.0.2",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/json2csv": "^5.0.7",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.19",
    "@types/pdfkit": "^0.13.4",
    "@types/pg": "^8.11.2",
    "@types/stream-buffers": "^3.0.7",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.2",
    "sqlite3": "^5.1.6",
    "supertest": "^6.3.3",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}

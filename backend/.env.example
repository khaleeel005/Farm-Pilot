# Required runtime environment
NODE_ENV=<development|test|production>
PORT=<api_port>

# Comma-separated frontend origins for CORS
FRONTEND_URL=<https://app.example.com,https://admin.example.com>

# Database
DB_DIALECT=<postgres|sqlite>
DB_LOG=<true|false>
DB_SSL=<true|false>

# Local Docker only (used by docker-compose host mapping)
DB_DOCKER_PORT=<postgres_docker_host_port>

# Postgres mode (required when DB_DIALECT=postgres and DATABASE_URL is not set)
DB_HOST=<postgres_host>
DB_PORT=<postgres_port>
DB_NAME=<database_name>
DB_USER=<database_user>
DB_PASSWORD=<database_password>
DB_MAINTENANCE_DB=<maintenance_database_name>

# Optional Postgres URL mode (if set, DB_HOST/DB_PORT/DB_NAME/DB_USER/DB_PASSWORD are ignored)
DATABASE_URL=<postgresql://user:password@host:port/database>

# SQLite mode (required when DB_DIALECT=sqlite)
DB_STORAGE=<absolute_or_relative_sqlite_path>

# Auth
JWT_SECRET=<jwt_access_secret>
JWT_REFRESH_SECRET=<jwt_refresh_secret>
JWT_EXPIRES_IN=<access_token_ttl>
JWT_REFRESH_EXPIRES_IN=<refresh_token_ttl>

# Admin bootstrap
ADMIN_USERNAME=<admin_username>
ADMIN_PASSWORD=<admin_password>
ADMIN_NAME=<admin_display_name>

# Logging
LOG_LEVEL=<error|warn|info|debug>

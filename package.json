{
  "name": "farm-manager-monorepo",
  "version": "2.0.0",
  "private": true,
  "description": "Farm Manager - Separated Backend (Express + TypeScript) and Frontend (Rsbuild + React)",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && pnpm dev",
    "dev:frontend": "cd frontend && pnpm dev",
    "db:up": "docker compose --env-file backend/.env -f backend/docker-compose.yml up -d",
    "db:down": "docker compose --env-file backend/.env -f backend/docker-compose.yml down",
    "db:logs": "docker compose --env-file backend/.env -f backend/docker-compose.yml logs -f postgres",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && pnpm build",
    "build:frontend": "cd frontend && pnpm build",
    "start:backend": "cd backend && pnpm start",
    "start:frontend": "cd frontend && pnpm preview",
    "test:backend": "cd backend && pnpm test",
    "lint:backend": "cd backend && pnpm typecheck",
    "lint:frontend": "cd frontend && pnpm lint",
    "install:all": "cd backend && pnpm install && cd ../frontend && pnpm install"
  },
  "workspaces": [
    "backend",
    "frontend"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.12.2",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
